{
    "name": "wvnderlab-agency/code-styles",
    "description": "A custom fixer to provide copyright headers in each file via PHP-CS-Fixer and Laravel Pint",
    "keywords": [ "php", "code style", "php-cs-fixer" ],
    "license": "MIT",
    "authors": [
        {
            "name": "johninamillion",
            "email": "john@wvnderlab.com"
        }
    ],
    "minimum-stability": "stable",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/wvnderlab-agency/copyright-header"
        }
    ],
    "require": {
        "friendsofphp/php-cs-fixer": "^3.80",
        "wvnderlab-agency/copyright-header": "^0.1.0"
    },
    "autoload": {
        "psr-4": {
            "WvnderlabAgency\\CodeStyles\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "WvnderlabAgency\\CodeStyles\\Composer\\Installer::publishConfiguration"
        ],
        "post-update-cmd": [
            "WvnderlabAgency\\CodeStyles\\Composer\\Installer::publishConfiguration"
        ],
        "analyse": "./vendor/bin/phpstan analyse",
        "csfix": "./vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php"
    }
}
